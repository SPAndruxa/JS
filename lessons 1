//6 Преобразование типов
//6.1 Какой результат будет у выражений ниже?
"" + 1 + 0 		// "10"
"" - 1 + 0 		// -1
true + false 	// 1
6 / "3" 		// 2
"2" * "3" 		// 6
4 + 5 + "px" 	// "9px"
"$" + 4 + 5 	// "$45"
"4" - 2 		// 2
"4px" - 2 		// NaN
7 / 0 			// Infinity
"  -9  " + 5 	// "  -9  5"
"  -9  " - 5 	// -14
null + 1 		// 1
undefined + 1 	// NaN
" \t \n" - 2 	// -2
//============================================================

//7 Операторы
//7.1 Чему будут равны переменные a, b, c и d в примере ниже?

let a = 1, b = 1;
let c = ++a;
let d = b++;
//a = 2
//b = 2
//c = 2
//d = 1

//7.2 Чему будут равны переменные a и x в примере ниже?
let a = 2;
let x = 1 + (a *= 2);
//a = 4
//x = 5
//============================================================

//8 Операторы сравнения
//8.1 Каким будет результат этих выражений?
5 > 4 					//true
"ананас" > "яблоко"		//false
"2" > "12"				//true
undefined == null		//true
undefined === null		//false
null == "\n0\n"			//false
null === +"\n0\n"		//false
//============================================================

